# === Django ===
DEBUG=True
DJANGO_SECRET_KEY=your-dev-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
LANGUAGE_CODE=ru
TIME_ZONE=UTC

# === Database ===
MYSQL_DB_NAME=ask_db
MYSQL_DB_USER=dev_user
MYSQL_DB_PASSWORD=dev_password
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=rootpassword

# === Cache ===
MEMCACHED_LOCATION=memcached:11211
MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211

# === Django Admin ===
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com

# === Database Management ===
RESET_DB_ON_START=True
DB_MAX_ATTEMPTS=30
MEMCACHED_MAX_ATTEMPTS=10

# === Test Data ===
FILL_DB_RATIO=10

# === Rating Weights ===
RATING_WEIGHT_LIKE=1
RATING_WEIGHT_DISLIKE=-1
RATING_WEIGHT_COMMENT=3
RATING_WEIGHT_CORRECT=5
RATING_WEIGHT_QUESTION=2

# === Centrifugo ===
CENTRIFUGO_SECRET_KEY=your-centrifugo-secret-dev
CENTRIFUGO_ADMIN_PASSWORD=centrifugo_admin_dev
CENTRIFUGO_ADMIN_SECRET=centrifugo_admin_secret_dev
CENTRIFUGO_API_KEY=your-centrifugo-api-key-dev
CENTRIFUGO_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
CENTRIFUGO_WEB=true
CENTRIFUGO_ADMIN=true
CENTRIFUGO_PUBLISH=false
CENTRIFUGO_ANONYMOUS=false
CENTRIFUGO_PRESENCE=false
CENTRIFUGO_JOIN_LEAVE=false
CENTRIFUGO_DEBUG=true
CENTRIFUGO_LOG_LEVEL=info
CENTRIFUGO_ALLOW_SUBSCRIBE_FOR_CLIENT=false
CENTRIFUGO_CLIENT_ANONYMOUS=false
CENTRIFUGO_HISTORY_SIZE=10
CENTRIFUGO_HISTORY_TTL=300s
CENTRIFUGO_HOST=centrifugo
CENTRIFUGO_PORT=8000
CENTRIFUGO_MAX_ATTEMPTS=10
CENTRIFUGO_TOKEN_EXPIRE_SECONDS=6000

# === Centrifugo Django Integration ===
CENTRIFUGO_ENABLED=true
CENTRIFUGO_WS_URL=ws://localhost:8001/connection/websocket
CENTRIFUGO_URL=http://localhost:8001
CENTRIFUGO_WS_URL_PUBLISH_DATA=http://centrifugo:8000/api/publish

# === CORS ===
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# === Cache TTL ===
TAGS_CACHE_TTL=2678400
USERS_CACHE_TTL=604800
POPULAR_TAGS_CACHE_TTL=2678400
TOP_USERS_CACHE_TTL=604800

# === Cron ===
CRON_TOP_USERS_INTERVAL=*/1 * * * *
CRON_POPULAR_TAGS_INTERVAL=*/1 * * * *

# === Nginx ===
NGINX_WORKER_CONNECTIONS=1024
NGINX_PORT=80
NGINX_SERVER_NAME=localhost
NGINX_ACCESS_LOG_PATH=/var/log/nginx/access.log
NGINX_ERROR_LOG_PATH=/var/log/nginx/error.log
NGINX_GZIP_COMP_LEVEL=6
NGINX_GZIP_BUFFERS=16 8k
NGINX_CACHE_ZONE_SIZE=10m
NGINX_CACHE_MAX_SIZE=50m
NGINX_CACHE_INACTIVE=24h
NGINX_CACHE_VALID_TIME=10m
NGINX_CACHE_PATH=/app/nginx/cache

# === Gunicorn ===
GUNICORN_HOST=0.0.0.0
GUNICORN_PORT=8000
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_ACCESS_LOG=/app/logs/gunicorn_access.log
GUNICORN_ERROR_LOG=/app/logs/gunicorn_error.log
GUNICORN_LOG_LEVEL=info
GUNICORN_RELOAD=false
GUNICORN_WORKER_CLASS=sync

# === Django Paths ===
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media
LOG_PATH=/app/logs/django.log

# === Pagination ===
PAGINATE_PER_PAGE=20

# === Fill DB Ratios ===
FILL_DB_USERS_RATIO=1
FILL_DB_TAGS_RATIO=1
FILL_DB_QUESTIONS_RATIO=10
FILL_DB_ANSWERS_RATIO=100
FILL_DB_REACTIONS_RATIO=200
FILL_DB_BATCH_SIZE=10000

# === Login ===
LOGIN_REDIRECT_URL=index

# === Centrifugo Config Path ===
CENTRIFUGO_CONFIG_PATH=/centrifugo/config.json

# === Django Host for Centrifugo Proxy ===
DJANGO_HOST=web
DJANGO_PORT=8000
