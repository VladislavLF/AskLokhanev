# === Django ===
DEBUG=False
DJANGO_SECRET_KEY=your-strong-production-secret-key-change-this
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,server-ip
LANGUAGE_CODE=ru
TIME_ZONE=UTC

# === Database ===
MYSQL_DB_NAME=ask_db_prod
MYSQL_DB_USER=prod_user
MYSQL_DB_PASSWORD=strong-db-password-here
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=strong-root-password-here

# === Cache ===
MEMCACHED_LOCATION=memcached:11211
MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211

# === Django Admin ===
DJANGO_SUPERUSER_USERNAME=admin_prod
DJANGO_SUPERUSER_PASSWORD=strong-admin-password-here
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com

# === Database Management ===
RESET_DB_ON_START=False
DB_MAX_ATTEMPTS=30
MEMCACHED_MAX_ATTEMPTS=10

# === Test Data ===
FILL_DB_RATIO=0

# === Rating Weights ===
RATING_WEIGHT_LIKE=1
RATING_WEIGHT_DISLIKE=-1
RATING_WEIGHT_COMMENT=3
RATING_WEIGHT_CORRECT=5
RATING_WEIGHT_QUESTION=2

# === Centrifugo ===
CENTRIFUGO_SECRET_KEY=strong-centrifugo-secret-prod
CENTRIFUGO_ADMIN_PASSWORD=strong-centrifugo-admin-password
CENTRIFUGO_ADMIN_SECRET=strong-centrifugo-admin-secret
CENTRIFUGO_API_KEY=strong-centrifugo-api-key-prod
CENTRIFUGO_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CENTRIFUGO_WEB=false
CENTRIFUGO_ADMIN=false
CENTRIFUGO_PUBLISH=false
CENTRIFUGO_ANONYMOUS=false
CENTRIFUGO_PRESENCE=false
CENTRIFUGO_JOIN_LEAVE=false
CENTRIFUGO_DEBUG=false
CENTRIFUGO_LOG_LEVEL=warn
CENTRIFUGO_ALLOW_SUBSCRIBE_FOR_CLIENT=false
CENTRIFUGO_CLIENT_ANONYMOUS=false
CENTRIFUGO_HISTORY_SIZE=10
CENTRIFUGO_HISTORY_TTL=300s
CENTRIFUGO_HOST=centrifugo
CENTRIFUGO_PORT=8000
CENTRIFUGO_MAX_ATTEMPTS=10
CENTRIFUGO_TOKEN_EXPIRE_SECONDS=6000

# === Centrifugo Django Integration ===
CENTRIFUGO_ENABLED=true
CENTRIFUGO_WS_URL=wss://your-domain.com/connection/websocket
CENTRIFUGO_URL=https://your-domain.com
CENTRIFUGO_WS_URL_PUBLISH_DATA=http://centrifugo:8000/api/publish

# === CORS ===
CORS_ALLOWED_ORIGINS=https://your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# === Cache TTL ===
TAGS_CACHE_TTL=2678400
USERS_CACHE_TTL=604800
POPULAR_TAGS_CACHE_TTL=2678400
TOP_USERS_CACHE_TTL=604800

# === Cron ===
CRON_TOP_USERS_INTERVAL=*/5 * * * *
CRON_POPULAR_TAGS_INTERVAL=*/5 * * * *

# === Nginx ===
NGINX_WORKER_CONNECTIONS=4096
NGINX_PORT=80
NGINX_SERVER_NAME=your-domain.com www.your-domain.com
NGINX_ACCESS_LOG_PATH=/var/log/nginx/access.log
NGINX_ERROR_LOG_PATH=/var/log/nginx/error.log
NGINX_GZIP_COMP_LEVEL=6
NGINX_GZIP_BUFFERS=16 8k
NGINX_CACHE_ZONE_SIZE=100m
NGINX_CACHE_MAX_SIZE=1g
NGINX_CACHE_INACTIVE=7d
NGINX_CACHE_VALID_TIME=1h
NGINX_CACHE_PATH=/app/nginx/cache

# === Gunicorn ===
GUNICORN_HOST=0.0.0.0
GUNICORN_PORT=8000
GUNICORN_WORKERS=4
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_ACCESS_LOG=/app/logs/gunicorn_access.log
GUNICORN_ERROR_LOG=/app/logs/gunicorn_error.log
GUNICORN_LOG_LEVEL=warning
GUNICORN_RELOAD=false
GUNICORN_WORKER_CLASS=gthread

# === Django Paths ===
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media
LOG_PATH=/app/logs/django.log

# === Pagination ===
PAGINATE_PER_PAGE=20

# === Fill DB Ratios ===
FILL_DB_USERS_RATIO=1
FILL_DB_TAGS_RATIO=1
FILL_DB_QUESTIONS_RATIO=10
FILL_DB_ANSWERS_RATIO=100
FILL_DB_REACTIONS_RATIO=200
FILL_DB_BATCH_SIZE=10000

# === Login ===
LOGIN_REDIRECT_URL=index

# === Centrifugo Config Path ===
CENTRIFUGO_CONFIG_PATH=/centrifugo/config.json

# === Django Host for Centrifugo Proxy ===
DJANGO_HOST=web
DJANGO_PORT=8000
